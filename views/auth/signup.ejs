<%- include('../partials/header', { loggedIn }); %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-10 col-lg-6">
                <h1 class="display-5 mb-2 text-center">Signup</h1>

                <form action="/auth/signup" method="POST" class="d-flex flex-column justify-content-start">

                    <div class="d-flex justify-content-around mb-3">
                        <input type="text" name="firstname" class="form-control me-3" placeholder="First Name *" required>
                        <input type="text" name="lastname" class="form-control" placeholder="Last Name *" required>
                    </div>

                    <input type="email" name="email" class="form-control mb-3" placeholder="Email *" required>

                    <input type="text" class="form-control mb-3" id="username" name="username" placeholder="Username *"
                        minlength="6" pattern="[A-Za-z0-9_-.]*" required>
                    <p class="form-text">Username should be atleast six characters long and can contain
                        alphabets, numbers, underscore, dots and hyphen.
                    </p>

                    <input type="password" class="form-control" id="password" name="password" placeholder="Password *"
                        minlength="6" required>
                    <p class="form-text">Password should be atleast six characters long.</p>

                    <input type="submit" class="btn btn-primary py-2 mb-2" />

                </form>

            </div>
        </div>
    </div>
    <%- include('../partials/footer'); %>