<%- include("../partials/header.ejs", { loggedIn }); %>

<div class="container">
  <div class="text-center display-5 mb-4">Contact Book</div>
  <ul class="nav nav-tabs mb-4" id="tabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button
        id="my-contacts-tab"
        class="nav-link"
        data-bs-toggle="tab"
        data-bs-target="#my-contacts"
        type="button"
        role="tab"
        aria-controls="my contacts"
        aria-selected="false"
      >
        My Contacts
      </button>
    </li>

    <li class="nav-item" role="presentation">
      <button
        id="find-contacts-tab"
        class="nav-link active"
        data-bs-toggle="tab"
        data-bs-target="#find-contacts"
        type="button"
        role="tab"
        aria-controls="find contacts"
        aria-selected="true"
      >
        Find
      </button>
    </li>

    <li class="nav-item" role="presentation">
      <button
        id="pending-contacts-tab"
        class="nav-link"
        data-bs-toggle="tab"
        data-bs-target="#pending-contacts"
        type="button"
        role="tab"
        aria-controls="pending contacts"
        aria-selected="false"
      >
        Pending
      </button>
    </li>

    <li class="nav-item" role="presentation">
      <button
        id="blocked-contacts-tab"
        class="nav-link"
        data-bs-toggle="tab"
        data-bs-target="#blocked-contacts"
        type="button"
        role="tab"
        aria-controls="blocked contacts"
        aria-selected="false"
      >
        Blocked
      </button>
    </li>
  </ul>

  <div class="tab-content" id="tab-content" style="min-width: 100%">
    <div
      class="tab-pane fade show"
      id="my-contacts"
      role="tabpanel"
      aria-labelledby="my contacts tab"
    >
      My Contacts
    </div>
    <div
      class="tab-pane fade show active"
      id="find-contacts"
      role="tabpanel"
      aria-labelledby="find contacts tab"
    >
      <%- include('./find.contacts.ejs', { contacts, user }) %>
    </div>
    <div
      class="tab-pane fade show"
      id="pending-contacts"
      role="tabpanel"
      aria-labelledby="pending contacts tab"
    >
      Pending
    </div>
    <div
      class="tab-pane fade show"
      id="blocked-contacts"
      role="tabpanel"
      aria-labelledby="blocked contacts tab"
    >
      Blocked
    </div>
  </div>
</div>

<%- include("../partials/footer.ejs", { loggedIn }); %>
